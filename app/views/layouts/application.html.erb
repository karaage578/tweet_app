<!DOCTYPE html>
<html>
  <head>
    <title>NotifyPush</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("Notify-Push", "/about") %>
        <% else %>
          <%= link_to("Notify-Push", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if current_user %>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("新規投稿", "/posts/new") %>
          </li>
          <li>
            <%= link_to("ユーザ一覧", "/users/index") %>
          </li>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
        <% else %>
          <li>
            <%= link_to("Notify-Pushとは", "/about") %>
          </li>
          <li>
            <%= link_to("配信一覧", "/posts/index") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

    <%= yield %>
  </body>
</html>
