<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <p>タイトル</p>
          <textarea name="title"><%= @post.title %></textarea>
          <p>内容</p>
          <textarea name="content"><%= @post.content %></textarea>
          <p>URL</p>
          <textarea name="url"><%= @post.url %></textarea>
          <%= f.submit "保存", date: {conform: "保存してもいいですか？", disable_with: "処理中..."} %>
        </div>
      </div>
    <% end %>
  </div>
</div>